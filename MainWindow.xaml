<Window x:Class="KxAmbianceMod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" WindowState="Maximized"
        Loaded="Window_Loaded">

    <Grid>
        <Canvas x:Name="EffectCanvas" IsHitTestVisible="False" Panel.ZIndex="0"/>
        <Rectangle x:Name="AmbianceOverlay" Fill="Transparent" IsHitTestVisible="False" Panel.ZIndex="10"/>
        <Canvas x:Name="CrosshairCanvas" Visibility="Collapsed" IsHitTestVisible="False" Panel.ZIndex="100"/>

        <Border x:Name="MenuBorder" Width="280" Height="Auto" Background="#CC000000"
                CornerRadius="12" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="40" Visibility="Visible" Panel.ZIndex="99" BorderBrush="#44FFFFFF" BorderThickness="1"
                MouseLeftButtonDown="MenuBorder_MouseLeftButtonDown">

            <StackPanel Margin="15">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="K R A Y Z  A M B I A N C E" Foreground="White" FontSize="13" FontWeight="Light" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    <Button Grid.Column="1" Content="âœ•" Click="ExitApp_Click" FontSize="12" Width="25" Height="25" Background="Transparent" Foreground="#88FFFFFF" BorderThickness="0" Cursor="Hand"/>
                </Grid>

                <Separator Background="#33FFFFFF" Margin="0,5,0,10"/>

                <TextBlock Text="Ambiance Color" Foreground="#AAAAAA" FontSize="11" Margin="0,0,0,3"/>
                <ComboBox x:Name="ColorBox" SelectionChanged="ColorBox_SelectionChanged" Height="25" FontSize="11">
                    <ComboBoxItem Content="Normal" IsSelected="True"/>
                    <ComboBoxItem Content="Purple"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Green"/>
                </ComboBox>

                <TextBlock Text="Effect Strength" Foreground="#AAAAAA" FontSize="11" Margin="0,10,0,3"/>
                <Slider x:Name="OpacitySlider" Minimum="0" Maximum="100" Value="50" ValueChanged="OpacitySlider_ValueChanged"/>

                <TextBlock Text="Snow Density" Foreground="#AAAAAA" FontSize="11" Margin="0,10,0,3"/>
                <Slider x:Name="SnowDensitySlider" Minimum="10" Maximum="300" Value="70" />

                <Separator Background="#33FFFFFF" Margin="0,15,0,10"/>

                <Grid Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="SnowToggle" Grid.Column="0" Content="Snow" Foreground="White" FontSize="11" IsChecked="True" Checked="SnowToggle_Checked" Unchecked="SnowToggle_Unchecked"/>
                    <CheckBox x:Name="CrossToggle" Grid.Column="1" Content="Crosshair" Foreground="Cyan" FontSize="11" Checked="CrossToggle_Checked" Unchecked="CrossToggle_Unchecked"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Theme" Click="SelectBgImage_Click" Height="28" FontSize="11" Background="#22FFFFFF" Foreground="White" BorderThickness="0" Margin="0,0,5,0" Cursor="Hand"/>
                    <Button Grid.Column="1" Content="Restart" Click="ResetBg_Click" Height="28" FontSize="11" Background="#44FF0000" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </Grid>

                <TextBlock Text="INSERT: Show/Hide" Foreground="#666666" FontSize="9" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>